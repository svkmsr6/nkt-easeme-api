# FastAPI
APP_NAME=NKT_EaseMe_API
APP_ENV=dev
APP_DEBUG=true

# Database (Supabase Postgres)
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/postgres

# Supabase Configuration
SUPABASE_URL=https://<your-project-id>.supabase.co
SUPABASE_ANON_KEY=<your-anon-key>

# Supabase JWT verification
# URL for fetching JWKS (recommended `.well-known/jwks.json` endpoint)
SUPABASE_JWKS_URL=https://<your-project-id>.supabase.co/auth/v1/.well-known/jwks.json
# If you use a service key or need to verify tokens using a symmetric secret, set it here
SUPABASE_JWT_SECRET=<your-jwt-secret-or-service-key>
JWT_AUDIENCE=authenticated
JWT_ISSUER=https://<your-project-id>.supabase.co/auth/v1

# OpenAI
OPENAI_API_KEY=sk-...
OPENAI_MODEL=gpt-4o-mini
OPENAI_TEMPERATURE=0.4
